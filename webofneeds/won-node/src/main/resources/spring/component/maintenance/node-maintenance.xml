<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <import resource="classpath:/spring/component/scheduling/node-scheduling.xml"/>

    <bean id="needManagementService" class="won.node.service.impl.NeedManagementService"/>

    <bean id="inactivityChecker" class="won.node.maintenance.NeedInactivityChecker">
        <property name="taskScheduler" ref="taskScheduler"/>
        <property name="inactivityCheckInterval" value="${need.inactivity.check.interval}"/>
        <property name="warnTimeout" value="${need.inactivity.warn.timeout}"/>
        <property name="deactivateTimeout" value="${need.inactivity.deactivate.timeout}"/>
    </bean>

</beans>
