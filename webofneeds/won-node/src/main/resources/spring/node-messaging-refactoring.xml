    <import resource="classpath:/spring/refactoring/node-core.xml" />
    <import resource="classpath:/spring/component/storage/jdbc-storage.xml" />
    <import resource="classpath:/spring/component/storage/jpabased-rdf-storage.xml" />
    <import resource="classpath:/spring/component/linkeddatasource/linkeddatasource.xml"/>
    <import resource="classpath:/spring/component/camel/node-camel.xml" />
    <import resource="classpath:/spring/refactoring/facet/facet.xml" />
    <import resource="classpath:/spring/refactoring/message-processors.xml"/>
    <!--import resource="classpath:/spring/component/needProtocolNeedService/needProtocolNeedService-jms.xml" /-->
    <import
    resource="classpath:/spring/component/needProtocolNeedServiceClient/needProtocolNeedServiceClient-jms.xml" />
    <!--import resource="classpath:/spring/component/ownerProtocolNeedService/ownerProtocolNeedService-jms.xml" /-->
    <import
    resource="classpath:/spring/component/ownerProtocolOwnerServiceClient/ownerProtocolOwnerServiceClient-jms.xml" />
    <import
            resource="classpath:/spring/component/matcherProtocolMatcherServiceClient/matcherProtocolMatcherServiceClient-jms.xml"/>
    <import resource="classpath:/spring/component/scheduling/node-scheduling.xml" />
    <!-- monitoring -->
