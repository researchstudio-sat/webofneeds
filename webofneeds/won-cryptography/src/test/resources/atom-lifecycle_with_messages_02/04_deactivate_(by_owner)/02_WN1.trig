@prefix con:   <https://w3id.org/won/content#> .
@prefix match:   <https://w3id.org/won/matching#> .
##################################################################
#              ATOM REPRESENTATION AT THE WON NODE               #
##################################################################

@prefix :       <http://www.example.com/resource/atom/> .
@prefix remote: <http://www.remote-example.com/resource/atom/> .
@prefix webID:  <http://www.example.com/webids/> .

@prefix won:    <https://w3id.org/won/core#> .
@prefix crypt:  <https://w3id.org/won/cryptography#> .
@prefix msg:    <https://w3id.org/won/message#> .

@prefix rdfs:   <http://www.w3.org/2000/01/rdf-schema#>
@prefix rdf:    <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix tio:    <http://purl.org/tio/ns#> .
@prefix gr:     <http://purl.org/goodrelations/v1#> .


############# ATOM META INFO ##############
# document URL: :[randomAtomID_1]/meta

GRAPH :[randomAtomID_1]/meta#data {

    :[randomAtomID_1]

        won:hasAtomEvents
            :[randomAtomID_1]/atomEvents ;
        won:connections
            :[randomAtomID_1]/connections ;

        won:atomState
            won:InActive ;
        won:socket
            won:ChatSocket ;

        :[randomAtomID_1]/atomEvents
            rdfs:member
                :[randomAtomID_1]/event/0 ,
                :[randomAtomID_1]/event/[randomEventID_1_2] .


        :[randomAtomID_1]/connections
            rdfs:member
                :[randomAtomID_1]/connection/[randomConnectionID_1] .

        :[randomAtomID_1]/connection/[randomConnectionID_1]
            :won:messageContainer [
                rdfs:member
                    :[randomAtomID_1]/connection/[randomConnectionID_1]/event/0
                    remote:[randomAtomID_2]/connection/[randomConnectionID_2]/event/[randomEventID_2]
            ]

}

:[randomAtomID_1]/meta#data
    crypt:hasSignature [
        a crypt:WonSignature ;
        crypt:signer webID:WN1
    ]

############# ATOM CORE CONTENT ##############
# document URL: :[randomAtomID_1]/core

# remains the same

############# ATOM TRANSIENT CONTENT ##############
# document URL: :[randomAtomID_1]/transient

# remains the same

############# ATOM MESSAGE 0 ##############
# document URL: :[randomAtomID_1]/event/0

# remains the same

############# CONNECT MESSAGE ##############
# document URL: :[randomAtomID_1]/connection/[randomConnectionID_1]/event/0

# remains the same

############# INCOMING CONNECT MESSAGE ##############
# document URL: remote:[randomAtomID_2]/connection/[randomConnectionID_2]/event/[randomEventID_2]

# remains the same

############# INCOMING CONNECT MESSAGE ##############
# document URL: :[randomAtomID_1]/event/[randomEventID_1_2]

GRAPH :[randomAtomID_1]/event/[randomEventID_1_2]#data {

    :[randomAtomID_1]/event/[randomEventID_1_2]
        a msg:AtomStateMessage ;
        msg:newAtomState won:Inactive ;
        msg:receiver :[randomAtomID_1] .

        msg:refersTo
            :[randomAtomID_2]/event/0

        :[randomAtomID_2]/event/0#data
            crypt:hasSignature [
                a crypt:WonSignature ;
                crypt:signer webID:owner_1 .
                # signature data ...
            ] .

}

:[randomAtomID_1]/event/[randomEventID_1_2]#data
    crypt:hasSignature [
        a crypt:WonSignature ;
        crypt:signer webID:owner_1 .
        # signature data ...
    ]

