<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans         http://www.springframework.org/schema/beans/spring-beans-4.1.xsd">

    <bean id="atomProducerFromTrig"
          class="won.bot.framework.component.atomproducer.impl.RoundRobinCompositeAtomProducer">
        <property name="atomFactories">
            <set>
                <bean class="won.bot.framework.component.atomproducer.impl.DirectoryBasedAtomProducer">
                    <property name="directory" value="${atoms.trig.directory.supply}"/>
                    <!-- the extension should be fixed to .trig anf input files trig format should be fixed -->
                    <property name="filenameFilterRegex" value=".*trig"/>
                    <property name="repeat" value="false"/>
                    <property name="fileBasedAtomProducer">
                        <bean class="won.bot.framework.component.atomproducer.impl.TrigFileAtomProducer"/>
                    </property>
                </bean>
            </set>
        </property>
    </bean>

</beans>
